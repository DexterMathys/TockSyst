  <br><br>
  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de Usuarios
        </h1>
      </div>
    </div>
  </div>
  <% if @mensaje != nil %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert <%= @alert %>">
            <%= @mensaje %>
          </div>
        </div>
      </div>
  <% end %>
  <div class="row text-center">
    <legend class="text-primary">
      <h3>
        Usuarios:
      </h3>
    </legend>

    <table Class="table table-bordered table-striped table-hover text-center">
      <tr>
        <th>
          Email
        </th>
        <th>
          Tipo de perfil
        </th>
        <th>
          Guardar
        </th>
      </tr>
      <% if @usuarios != nil %>
          <% @usuarios.each do |usuario| %>
              <tr>
                <form class="text-center" method="POST" action="/usuarios/update">
                  <td>
                    <%= usuario.email %>
                  </td>
                  <td>
                    <select name="rol" class="btn btn-primary">
                      <option value="" <% if usuario.role == "" %>selected="selected"<% end %>>

                      </option>
                      <option value="admin" <% if usuario.role == "admin" %>selected="selected"<% end %>>
                        Admin
                      </option>
                      <option value="stock" <% if usuario.role == "stock" %>selected="selected"<% end %>>
                        Stock
                      </option>
                      <option value="compras" <% if usuario.role == "compras" %>selected="selected"<% end %>>
                        Compras
                      </option>
                      <option value="ventas" <% if usuario.role == "ventas" %>selected="selected"<% end %>>
                        Ventas
                      </option>
                      <option value="proveedores" <% if usuario.role == "proveedores" %>selected="selected"<% end %>>
                        Proveedores
                      </option>
                      <option value="clientes" <% if usuario.role == "clientes" %>selected="selected"<% end %>>
                        Clientes
                      </option>
                    </select>
                  </td>
                  <td>
                    <input type="hidden"  name="id" value="<%= usuario.id %>">
                    <input type="submit" class="btn btn-primary" name="guardar" value="Guardar">
                  </td>
                </form>
              </tr>
          <% end %>
      <% end %>
    </table>

  </div>
</div>
