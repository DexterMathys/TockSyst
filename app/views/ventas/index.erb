  </div>
  <br><br>
  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de ventas
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
    </div>
    <table>
      <tr>
        <form class="text-center" method="POST" action="/ventas/buscar_venta_numero">
          <td>
            Buscar por número:
          </td>
          <td>
            <input type="number" min="0" name="numero" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_número" value="Buscar">
          </td>
        </form>
      </tr>
      <tr>
        <form class="text-center" method="POST" action="/ventas/buscar_venta_cliente">
          <td>
            Buscar por cliente:
          </td>
          <td>
            <input type="text" min="0" name="cliente" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_cliente" value="Buscar">
          </td>
        </form>
      </tr>
      <tr>
        <form class="text-center" method="POST" action="/ventas/buscar_venta_fecha">
          <td>
            Buscar por fecha:
          </td>
          <td>
            <input type="date" min="0" name="fecha" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_fecha" value="Buscar">
          </td>
        </form>
      </tr>
    </table>
  </div>
  <% if @mensaje != nil %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert <%= @alert %>">
            <%= @mensaje %>
          </div>
        </div>
      </div>
  <% end %>

  <% if @busqueda != nil %>
      <div class="row">
        <legend class="text-primary">
          <h3>
            Resultado de la búsqueda:
          </h3>
        </legend>
        <% if @venta != nil && @venta.size > 0  %>
          <table Class="table table-bordered table-striped table-hover">
            <tr>
              <th>
                Número
              </th>
              <th>
                Fecha
              </th>
              <th>
                Cliente
              </th>
              <th>
                Total
              </th>
              <th>
                Ver
              </th>
            </tr>
            <% @venta.each do |vent| %>
                <tr>
                  <td>
                    <%= vent.id %>
                  </td>
                  <td>
                    <%= vent.fecha %>
                  </td>
                  <td>
                    <%= vent.cliente.nombre %>
                  </td>
                  <td>
                    <%= vent.total %>
                  </td>
                  <td>
                    <form class="text-center" method="POST" action="/ventas/show">
                      <input type="hidden"  name="id" value="<%= vent.id %>">
                      <input type="submit" class="btn btn-primary" name="ver" value="Ver">
                    </form>
                  </td>
                </tr>
            <% end %>
          </table>
        <% else %>
            <div class="alert alert-danger">
              No se encontró ninguna venta
            </div>
        <% end %>
      </div>
      <hr>
  <% end %>
  <div class="row">
    <legend class="text-primary">
      <h3>
        Ventas:
      </h3>
    </legend>
    <table Class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          Número
        </th>
        <th>
          Fecha
        </th>
        <th>
          Cliente
        </th>
        <th>
          Total
        </th>
        <th>
          Ver
        </th>
      </tr>
      <% if @ventas != nil %>
          <% @ventas.each do |venta| %>
              <tr>
                <td>
                  <%= venta.id %>
                </td>
                <td>
                  <%= venta.fecha %>
                </td>
                <td>
                  <%= venta.cliente.nombre %>
                </td>
                <td>
                  <%= venta.total %>
                </td>
                <td>
                  <form class="text-center" method="POST" action="/ventas/show">
                    <input type="hidden"  name="id" value="<%= venta.id %>">
                    <input type="submit" class="btn btn-primary" name="ver" value="Ver">
                  </form>
                </td>
          <% end %>
      <% end %>
    </table>
  </div>
</div>