  <br><br>
  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de compras - Ver Compra
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <table>
      <tr>
        <td>
          Fecha de la compra:
        </td>
        <td>
          <%= @compra.fecha %>
        </td>
      </tr>
      <tr>
        <td>
          Nombre del proveedor:
        </td>
        <td>
          <%= @proveedor.nombre %>
        </td>
      </tr>
    </table>
    <br>
    <table class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          Número
        </th>
        <th>
          Nombre
        </th>
        <th>
          Cantidad
        </th>
        <th>
          Precio unitario
        </th>
        <th>
          Subtotal
        </th>
      </tr>
          <% @numero = 1 %>
          <% @productos.each do |producto| %>
              <tr>
                <td>
                  <%= @numero %>
                  <% @numero = @numero + 1 %>
                </td>
                <% @prod = Producto.find(producto.producto_id) %>
                <td>
                  <%= @prod.nombre %>
                </td>
                <td>
                  <%= producto.cantidad %>
                </td>
                <td>
                  <%= producto.precio_unitario %>
                </td>
                <td>
                  <%= ((producto.cantidad.to_i) * (producto.precio_unitario.to_f)) %>
                </td>
              </tr>
          <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-3">
      <table class="table table-striped table-hover">
        <tr>
          <td>
            Total
          </td>
          <td>
            <%= @compra.total %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>