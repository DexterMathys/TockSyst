  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de compras - Nueva Compra
        </h1>
      </div>
    </div>
  </div>
  <form method="POST" action="/compras/comprar">
    <div class="row">
      <table>
        <tr>
          <td>
            Fecha de la compra:
          </td>
          <td>
            <%= @fecha %>
          </td>
        </tr>
        <tr>
          <td>
            Nombre del proveedor:
          </td>
          <td>
            <%= @proveedor.nombre %>
          </td>
        </tr>
      </table>
      <br>
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>
            Número
          </th>
          <th>
            Nombre
          </th>
          <th>
            Cantidad
          </th>
          <th>
            Precio unitario
          </th>
          <th>
            Subtotal
          </th>
          <th>
            Eliminar
          </th>
        </tr>
        <% @total = 0 %>
        <% if @productos_provisorios.count > 0 %>
            <% @numero = 1 %>
            <% @productos_provisorios.each do |producto| %>
                <tr>
                  <td>
                    <%= @numero %>
                    <% @numero = @numero + 1 %>
                  </td>
                  <% @prod = Producto.find(producto.id_producto) %>
                  <td>
                    <%= @prod.nombre %>
                  </td>
                  <td>
                    <%= producto.cantidad %>
                  </td>
                  <td>
                    <%= @prod.precioCompra %>
                  </td>
                  <td>
                    <%= (producto.cantidad * @prod.precioCompra) %>
                  </td>
                  <% @total += (producto.cantidad * @prod.precioCompra) %>
                  <td>
                    <form method="POST" action="/compras/eliminar">
                      <input type="hidden" name="fecha" value="<%= @fecha %>">
                      <input type="hidden" name="proveedor_id" value="<%= @proveedor.id %>">
                      <input type="hidden" name="id" value="<%= producto.id %>">
                      <input type="submit" class="btn btn-primary" name="eliminar" value="Eiminar">
                    </form>
                  </td>
                </tr>
            <% end %>
        <% end %>
      </table>
    </div>
    <div class="row">
      <div class="col-md-8">
      </div>
      <div class="col-md-3">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              Total
            </td>
            <td>
              <%= @total %>
            </td>
          </tr>
          <tr>
            <td>
              Pagó
            </td>
            <td>
              <input type="number" step="0.05" min=0 name="pago" required>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <% if @productos_provisorios.count > 0 %>
        <div class="text-center">
          <input type="submit" class="btn btn-primary" value="Terminar compra">
        </div>
    <% end %>
  </form>
  <div class="row text-center">
    </div>
    <div class="row">
      <hr>
    </div>
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-10 text-center">
        <form method="post" action="/compras/buscar">
          Buscar producto:
          <input type="hidden" name="fecha" value="<%= @fecha %>">
          <input type="hidden" name="proveedor_id" value="<%= @proveedor.id %>">
          <input type="text" min="0" name="nombre">
          <input type="submit" class="btn btn-primary" name="boton_nombre" value="Buscar">
        </form>
      </div>
    </div>
    <div class="row">
    </div>
    <% if @busqueda != nil %>
        <div class="row">
          <legend class="text-primary">
            <h3>
              Resultado de la búsqueda:
            </h3>
          </legend>
          <% if @producto != nil %>
              <table Class="table table-bordered table-striped table-hover">
                <tr>
                  <th>
                    Nombre
                  </th>
                  <th>
                    Descripción
                  </th>
                  <th>
                    Cantidad en stock
                  </th>
                  <th>
                    Precio de Compra
                  </th>
                  <th>
                    Cantidad a comprar
                  </th>
                  <th>
                    Comprar
                  </th>
                </tr>
                <tr>
                  <td>
                    <%= @producto.nombre %>
                  </td>
                  <td>
                    <%= @producto.descripcion %>
                  </td>
                  <td>
                    <%= @producto.cantidad %>
                  </td>
                  <td>
                    <%= @producto.precioCompra %>
                  </td>
                  <form class="text-center" method="POST" action="/compras/agregar">
                    <td>
                      <input type="number" min="0" name="cantidad_comprar">
                    </td>
                    <td>
                      <input type="hidden" name="fecha" value="<%= @fecha %>">
                      <input type="hidden" name="proveedor_id" value="<%= @proveedor.id %>">
                      <input type="hidden"  name="id" value="<%= @producto.id %>">
                      <input type="submit" class="btn btn-primary" name="comprar_producto" value="Comprar">
                    </td>
                  </form>
                </tr>
              </table>
        <% else %>
              <div class="alert alert-danger">
                No se encontró ningún producto con ese nombre
              </div>
        <% end %>
        </div>
        <hr>
    <% end %>
    <div class="row">
    </div>
    <div class="row">
      <legend class="text-primary">
        <h3>
          Productos:
        </h3>
      </legend>
      <table Class="table table-bordered table-striped table-hover">
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Descripción
          </th>
          <th>
            Cantidad en stock
          </th>
          <th>
            Precio de compra
          </th>
          <th>
            Cantidad a comprar
          </th>
          <th>
            Comprar
          </th>
        </tr>
        <% if @productos != nil %>
            <% @productos.each do |producto| %>
                <tr>
                  <td>
                    <%= producto.nombre %>
                  </td>
                  <td>
                    <%= producto.descripcion %>
                  </td>
                  <td>
                    <%= producto.cantidad %>
                  </td>
                  <td>
                    <%= producto.precioCompra %>
                  </td>
                  <form class="text-center" method="POST" action="/compras/agregar">
                    <td>
                      <input type="number" min="0" name="cantidad_comprar">
                    </td>
                    <td>
                      <input type="hidden" name="fecha" value="<%= @fecha %>">
                      <input type="hidden" name="proveedor_id" value="<%= @proveedor.id %>">
                      <input type="hidden"  name="id" value="<%= producto.id %>">
                      <input type="submit" class="btn btn-primary" name="comprar_producto" value="Comprar">
                    </td>
                  </form>
            <% end %>
        <% end %>
      </table>
    </div>
