  </div>
  <br><br>
  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de compras
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
    </div>
    <table>
      <tr>
        <form class="text-center" method="POST" action="/compras/buscar_compra_numero">
          <td>
            Buscar por número:
          </td>
          <td>
            <input type="number" min="0" name="numero" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_número" value="Buscar">
          </td>
        </form>
      </tr>
      <tr>
        <form class="text-center" method="POST" action="/compras/buscar_compra_proveedor">
          <td>
            Buscar por proveedor:
          </td>
          <td>
            <input type="text" min="0" name="proveedor" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_proveedor" value="Buscar">
          </td>
        </form>
      </tr>
      <tr>
        <form class="text-center" method="POST" action="/compras/buscar_compra_fecha">
          <td>
            Buscar por fecha:
          </td>
          <td>
            <input type="date" min="0" name="fecha" required>
          </td>
          <td>
            <input type="submit" class="btn btn-primary" name="boton_fecha" value="Buscar">
          </td>
        </form>
      </tr>
    </table>
  </div>
  <% if @mensaje != nil %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert <%= @alert %>">
            <%= @mensaje %>
          </div>
        </div>
      </div>
  <% end %>

  <% if @busqueda != nil %>
      <div class="row">
        <legend class="text-primary">
          <h3>
            Resultado de la búsqueda:
          </h3>
        </legend>
        <% if @compra != nil && @compra.size > 0 %>
          <table Class="table table-bordered table-striped table-hover">
            <tr>
              <th>
                Número
              </th>
              <th>
                Fecha
              </th>
              <th>
                Proveedor
              </th>
              <th>
                Total
              </th>
              <th>
                Ver
              </th>
            </tr>
            <% @compra.each do |comp| %>
              <tr>
                <td>
                  <%= comp.id %>
                </td>
                <td>
                  <%= comp.fecha %>
                </td>
                <td>
                  <%= comp.proveedor.nombre %>
                </td>
                <td>
                  <%= comp.total %>
                </td>
                <td>
                  <form class="text-center" method="POST" action="/compras/show">
                    <input type="hidden"  name="id" value="<%= comp.id %>">
                    <input type="submit" class="btn btn-primary" name="ver" value="Ver">
                  </form>
                </td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <div class="alert alert-danger">
            No se encontró ninguna compra
          </div>
        <% end %>
      </div>
      <hr>
  <% end %>
  <div class="row">
    <legend class="text-primary">
      <h3>
        Compras:
      </h3>
    </legend>
    <table Class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          Número
        </th>
        <th>
          Fecha
        </th>
        <th>
          Proveedor
        </th>
        <th>
          Total
        </th>
        <th>
          Ver
        </th>
      </tr>
      <% if @compras != nil %>
          <% @compras.each do |compra| %>
              <tr>
                <td>
                  <%= compra.id %>
                </td>
                <td>
                  <%= compra.fecha %>
                </td>
                <td>
                  <%= compra.proveedor.nombre %>
                </td>
                <td>
                  <%= compra.total %>
                </td>
                <td>
                  <form class="text-center" method="POST" action="/compras/show">
                    <input type="hidden"  name="id" value="<%= compra.id %>">
                    <input type="submit" class="btn btn-primary" name="ver" value="Ver">
                  </form>
                </td>
          <% end %>
      <% end %>
    </table>
  </div>
</div>