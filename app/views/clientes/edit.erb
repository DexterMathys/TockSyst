  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de Clientes - Modificar cliente
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <form class="text-center" method="POST" action="/clientes/update">
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Dirección
          </th>
          <th>
            Teléfono
          </th>
          <th>
            Deuda
          </th>
          <th>
            Estado
          </th>
        </tr>
        <tr>
          <td>
            <input type="text" name="Nombre" value="<%= @cliente.nombre %>" required>
          </td>
          <td>
            <input type="text" name="Direccion" value="<%= @cliente.direccion %>">
          </td>
          <td>
            <input type="text" name="Teléfono" value="<%= @cliente.telefono %>">
          </td>
          <td>
            <input type="number" step="0.05" min="0" max="1000000" name="Deuda" value="<%= @cliente.deuda %>" required>
          </td>
          <td>
            <select name="Estado" class="btn btn-primary" required>
              <% if @cliente.estado == 'Activo' %>
                  <option value="Activo" selected>Activo</option>
                  <option value="Inactivo" >Inactivo</option>
              <% else %>
                  <option value="Inactivo" selected>Inactivo</option>
                  <option value="Activo" >Activo</option>
              <% end %>
            </select>
          </td>
        </tr>
      </table>
      <input type="submit" class="btn btn-primary" name="nuevo" value="&#x2713; Aceptar">
      <input type="hidden"  name="id" value="<%= @cliente.id %>">
    </form>
  </div>
</div>
