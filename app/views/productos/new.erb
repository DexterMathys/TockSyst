  <br><br>
  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de Stock - Nuevo producto
        </h1>
      </div>
    </div>
  </div>
  <% if @creado != nil %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert <%= @alert %>">
            <%= @mensaje %>
          </div>
        </div>
      </div>
  <% end %>
  <div class="row">
    <form class="text-center" method="POST" action="/stock/nuevo">
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Descripción
          </th>
          <th>
            Cantidad
          </th>
          <th>
            Precio de compra
          </th>
          <th>
            Precio de venta
          </th>
        </tr>
        <tr>
          <td>
            <input type="text" name="Nombre" required>
          </td>
          <td>
            <input type="text" name="Descripcion">
          </td>
          <td>
            <input type="number" min="0" name="Cantidad" required>
          </td>
          <td>
            <input type="number" step="0.05" min="0" max="1000000" name="PrecioDeCompra" required>
          </td>
          <td>
            <input type="number" step="0.05" min="0" max="1000000" name="PrecioDeVenta" required>
          </td>
        </tr>
      </table>
      <input type="submit" class="btn btn-primary" name="nuevo" value="&#x2713; Aceptar">
    </form>
  </div>
</div>
