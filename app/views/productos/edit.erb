  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Sector de Stock - Modificar producto
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <form class="text-center" method="POST" action="/stock/update">
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Descripción
          </th>
          <th>
            Cantidad
          </th>
          <th>
            Precio de Compra
          </th>
          <th>
            Precio de Venta
          </th>
          <th>
            Estado
          </th>
        </tr>
        <tr>
          <td>
            <input type="text" name="Nombre" value="<%= @producto.nombre %>" required>
          </td>
          <td>
            <input type="text" name="Descripcion" value="<%= @producto.descripcion %>">
          </td>
          <td>
            <input type="number" min="0" name="Cantidad" value="<%= @producto.cantidad %>" required>
          </td>
          <td>
            <input type="number" step="0.05" min="0" max="1000000" name="PrecioDeCompra" value="<%= @producto.precioCompra %>" required>
          </td>
          <td>
            <input type="number" step="0.05" min="0" max="1000000" name="PrecioDeVenta" value="<%= @producto.precioVenta %>" required>
          </td>
          <td>
            <select name="Estado" class="btn btn-primary" required>
              <% if @producto.estado == 'Activo' %>
                <option value="Activo" selected>Activo</option>
                <option value="Inactivo" >Inactivo</option>
              <% else %>
                <option value="Inactivo" selected>Inactivo</option>
                <option value="Activo" >Activo</option>
              <% end %>
            </select>
          </td>
        </tr>
      </table>
      <input type="submit" class="btn btn-primary" name="nuevo" value="&#x2713; Aceptar">
      <input type="hidden"  name="id" value="<%= @producto.id %>">
    </form>
  </div>
