  <div class="row">
    <div class="col-md-12">
      <div class="text-center text-primary page-header">
        <h1>
          Lista de precios
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <table Class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          Nombre
        </th>
        <th>
          Descripción
        </th>
        <th>
          Precio de venta
        </th>
      </tr>
      <% if @productos != nil %>
          <% @productos.each do |producto| %>
              <tr>
                <td>
                  <%= producto.nombre %>
                </td>
                <td>
                  <%= producto.descripcion %>
                </td>
                <td>
                  <%= producto.precioVenta %>
                </td>
          <% end %>
      <% end %>
    </table>
  </div>
